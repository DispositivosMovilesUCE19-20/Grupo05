<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lista">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D8E4D3D3"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="No hay conexiÃ³n a Internet"
        android:textColor="#111"
        android:textSize="10sp" />

    <include
        android:id="@+id/menu"
        layout="@layout/menu"
        app:title="cvxcv">

    </include>


    <TextView
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="@string/txtView_desarrollado"
        android:textAlignment="center"
        android:textSize="12dp"

        />

    <TableLayout
        android:layout_width="387dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="39dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textLista"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:text="Lista de Estudiantes"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="3">

                <TableLayout
                    android:id="@+id/tableLista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="53dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="52dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/txtId"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Id"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="73dp">

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_bordes_redondos"
                android:text="VER"
                android:textAlignment="center"
                android:textColor="@color/colorLabel"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bordes_redondos"
                android:text="EDITAR "
                android:textAlignment="center"
                android:textColor="@color/colorLabel"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bordes_redondos"
                android:text="ELIMINAR "
                android:textAlignment="center"
                android:textColor="@color/colorLabel"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="71dp">

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:background="@drawable/button_relleno_redondo"
                android:text="Registrar Estudiante "
                android:textColor="@color/colorLabel"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>

</RelativeLayout>