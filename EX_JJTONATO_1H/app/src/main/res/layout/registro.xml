<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">


    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="5dp"
        android:text="No hay conexión a Internet"
        android:textColor="@color/colorLabel"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="80dp"
        android:text="Celular:"
        android:textColor="@color/colorLabel"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/txtCelular"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/registro"

        android:textColor="@color/colorLabel"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="27dp"
        android:text="Usuario:"
        android:textColor="@color/colorLabel"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtUsuario"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="16dp"
        android:text="Clave:"
        android:textColor="@color/colorLabel"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtClave"
        app:layout_constraintHorizontal_bias="0.987"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="17dp"
        android:text="Nombre:"
        android:textColor="@color/colorLabel"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtNombre"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="17dp"
        android:text="Apellido:"
        android:textColor="@color/colorLabel"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtApellido"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:text="Email:"
        android:textColor="@color/colorLabel"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/txtEmail"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="344dp"
        android:text="Fecha de nacimiento:"
        android:textColor="@color/colorLabel"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtFecha"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="169dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="Escriba el nombre de usuario"
        android:inputType="textPersonName"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txtClave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="169dp"
        android:layout_height="34dp"
        android:layout_below="@+id/txtClave"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="Escriba su nombre"
        android:inputType="textPersonName"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txtApellido"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtClave"
        android:layout_width="169dp"
        android:layout_height="34dp"
        android:layout_below="@+id/txtUsuario"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="Escriba la clave de acceso"
        android:inputType="textPersonName"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNombre"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="169dp"
        android:layout_height="34dp"
        android:layout_below="@+id/txtNombre"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="Escriba su apellido"
        android:inputType="textPersonName"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txtEmail"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="169dp"
        android:layout_height="31dp"
        android:layout_below="@+id/txtApellido"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:hint="Escriba su email"
        android:inputType="textEmailAddress"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txtCelular"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtCelular"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Escriba su celular"
        android:inputType="phone"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hombre" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mujer" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:text="Seleccionar Fecha"
        app:layout_constraintBottom_toTopOf="@+id/btnFoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="-54.00004dp"
        android:layout_marginBottom="28dp"
        android:text="Genero:"
        android:textColor="@color/colorLabel"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFecha"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:text="Asignaturas:"
        android:textColor="@color/colorLabel"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cbcLenguaje"
        app:layout_constraintEnd_toStartOf="@+id/btnFoto"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="157dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:text="@string/pie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/swtBecado"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:layout_below="@+id/cbcFisica"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="44dp"
        android:text="Becado"
        android:textColor="@color/colorLabel"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFoto"
        android:layout_width="75dp"
        android:layout_height="39dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Foto"
        android:textColor="@color/colorLabel"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgFoto"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="134dp"
        android:layout_height="93dp"
        android:layout_below="@+id/btnFoto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/cbcAnalisis"
        app:srcCompat="@color/colorPrimary" />

    <CheckBox
        android:id="@+id/cbcLenguaje"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="5dp"
        android:text="Lenguaje"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/cbcProgra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbcLenguaje"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="1dp"
        android:text="Programación"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/cbcFisica"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbcProgra"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="0dp"
        android:text="Física"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/cbcCiencias"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/cbcLenguaje"
        android:text="Ciencias"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/cbcAnalisis"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbcCiencias"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/cbcProgra"
        android:text="Análisis"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/cbcIngles"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbcAnalisis"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/cbcFisica"
        android:text="Inglés"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:backgroundTint="#2196F3"
        android:text="REGISTRARSE"
        android:textColor="@color/colorLabel" />


</RelativeLayout>