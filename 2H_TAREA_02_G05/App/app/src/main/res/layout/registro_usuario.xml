<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.edu.uce.controlador.RegistroUsuario">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D8E4D3D3"
        android:gravity="center"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="No hay conexiÃ³n a Internet"
        android:textColor="#111"
        android:textSize="10sp" />


    <TableLayout
        android:layout_width="292dp"
        android:layout_height="531dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="80dp">


        <TableRow
            android:layout_width="281dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_span="2"
                android:background="@drawable/rectangular_imagen"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/registro_usuario" />


        </TableRow>

        <TableRow>

            <TextView>

            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewUsuario"
                android:text="@string/txtView_usuario"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtUsuario"
                android:hint="@string/txtUsuario"
                android:inputType="textPersonName"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtView_password"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtClave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/txtPassword"
                android:inputType="textPassword"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow>

            <TextView>

            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="225dp"
                android:layout_span="2"
                android:background="@drawable/button_relleno_redondo"
                android:text="@string/btn_registrarse"
                android:textColor="@color/colorLabel"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="@string/txtView_desarrollado"
        android:textAlignment="center"

        />

</RelativeLayout>